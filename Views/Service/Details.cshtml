@model ActionKids.Models.Service
@using Htmx
@using Htmx.TagHelpers

@{
    ViewData["Title"] = "Details";
}

<script>
@Html.Raw(HtmxSnippets.AntiforgeryJavaScript)
</script>

<h1>Details</h1>

<div>
    <h4>Service</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ServiceStart)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ServiceStart)
        </dd>
    </dl>
</div>
<div>
	@foreach(var rec in Model.ServiceRecords)
	{
    <dl class="row">
        <dt class = "col-sm-6">
            @rec.Kid.FirstName @rec.Kid.LastName
        </dt>
        <dd class = "col-sm-3"
			id="@rec.KidId"
			hx-confirm="Remove a star from @rec.Kid.FirstName"
			hx-trigger="click"
			hx-disabled-elt="this"
			hx-target="this"
			hx-post
			hx-controller="Service"
			hx-action="TakeStar"
			hx-route-kidId="@rec.KidId"
			hx-route-serviceId="@rec.ServiceId"
		>
			<partial name="_RenderStars" model="@rec.Stars" />
        </dd>
        <dd class = "col-sm-3">
            ðŸ’° @rec.PointsEarned
        </dd>
    </dl>
	}
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div> 
